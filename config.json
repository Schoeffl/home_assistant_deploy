{
    "system":   {
                    "hostname": "ha"
                },
    "system_apps": [
                        "vim",
                        "tmux",
                        "gedit",
                        "kate",
                        "tig",
                        "htop",
                        "tree"
                    ],
    "python_system_libs":   [
                                "libreadline-dev",
                                "libncurses5-dev",
                                "libssl-dev",
                                "libgdbm-dev",
                                "libsqlite3-dev",
                                "libbz2-dev",
                                "liblzma-dev",
                                "libdb-dev",
                                "tk-dev"
                            ],
    "user":     {
                    "accounts": [
                                    {
                                        "name": "hass",
                                        "ha_user": true,
                                        "smb_user": true
                                    },
                                    {
                                        "name": "fstakem",
                                        "ha_user": false,
                                        "smb_user": true
                                    }
                                ],
                    "dirs": [
                                "projects",
                                "software",
                                "notes",
                                "tmp",
                                "docs"
                            ]
                },
    "pyenv":    {
                    "git_url":          "https://github.com/yyuu/pyenv",
                    "shortcuts":        [
                                            "export PYENV_ROOT=\"/opt/.pyenv\"",
                                            "export PATH=\"$PYENV_ROOT/bin:$PATH\"",
                                            "eval \"$(pyenv init -)\""
                                        ],
                    "update_git_url":   "https://github.com/yyuu/pyenv-update"
                },
    "python":   {
                    "versions":         [   
                                            "3.6.0"
                                        ],
                    "current_version":  "3.6.0"
                },
    "home_assistant":   {
                            "git_src_url":       "https://github.com/home-assistant/home-assistant",
                            "root_dir":         "home_assistant",
                            "source_dir":       "src",
                            "venv_dir":         "ha_env",
                            "config_dir":       "config",
                            "use_git_config":   true,
                            "git_config_url":   "https://github.com/fstakem/home_assistant_config"
                        },
    "firewall": {
                    "enable":   true,
                    "allowed":  [
                                    "ssh",
                                    "http",
                                    "https",
                                    "5123/tcp",
                                    "2812/tcp",
                                    "8123/tcp"
                                ]
                },
    "smb":  {
                    "enable":   false
            },
    "monit":    {
                    "enable":   false
                },
    "service_file": "home-assistant.service"
}